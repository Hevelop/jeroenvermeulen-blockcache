<config>
    <sections>
        <jeroenvermeulen_blockcache translate="label" module="jeroenvermeulen_blockcache">
            <label>JeroenVermeulen BlockCache</label>
            <comment><![CDATA[After switching please reindex the<br /><em>Catalog Search Index</em>.]]></comment>
            <tab>advanced</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="jeroenvermeulen_blockcache">
                    <label>General</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <frontend_type>text</frontend_type>
                    <frontend_model>jeroenvermeulen_blockcache/adminhtml_system_config_form_fieldset_first</frontend_model>
                    <fields>
                        <enable_formkey_fix translate="label comment">
                            <label>Enable FormKey Fix</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_formkey_fix>
                        <enable_flush_log translate="label comment">
                            <label>Enable Cache Flush Log</label>
                            <comment>Log cache flushes to: var/log/cache_flush.log</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_flush_log>
                        <enable_flush_translation_change translate="label">
                            <label>Enable flush on translation change</label>
                            <comment>You need to [Flush Cache Storage] after switching.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_flush_translation_change>
                    </fields>
                </general>
                <category_page translate="label" module="jeroenvermeulen_blockcache">
                    <label>Product List / Category Page</label>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_cache translate="label comment">
                            <label>Enable Caching</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_cache>
                        <lifetime translate="label">
                            <label>Life Time (Seconds)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <validate>validate-greater-than-zero</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable_cache>1</enable_cache>
                            </depends>
                        </lifetime>
                        <enable_messages_fix translate="label comment">
                            <label>Enable Messages Fix</label>
