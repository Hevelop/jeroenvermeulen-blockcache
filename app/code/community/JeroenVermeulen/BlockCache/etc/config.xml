<!--suppress XmlUnboundNsPrefix -->
<config>
    <modules>
        <jeroenvermeulen_blockcache>
            <version>0.10.0b</version>
        </jeroenvermeulen_blockcache>
    </modules>
    <global>
        <blocks>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Block</class>
            </jeroenvermeulen_blockcache>
            <catalog>
                <rewrite>
                    <category_view>JeroenVermeulen_BlockCache_Block_Catalog_Category_View</category_view>
                    <product_view>JeroenVermeulen_BlockCache_Block_Catalog_Product_View</product_view>
                </rewrite>
            </catalog>
            <emico_tweakwise>
                <rewrite>
                    <catalog_category_view>JeroenVermeulen_BlockCache_Block_Tweakwise_Catalog_Category_View</catalog_category_view>
                </rewrite>
            </emico_tweakwise>
            <anylamp_catalog>
                <rewrite>
                    <product_view>JeroenVermeulen_BlockCache_Block_Catalog_Product_View</product_view>
                    <product_view>JeroenVermeulen_BlockCache_Block_Anylamp_Catalog_Product_View</product_view>
                </rewrite>
            </anylamp_catalog>
            <anylamp_discount>
                <rewrite>
                    <catalog_product_view_tierprice>JeroenVermeulen_BlockCache_Block_Discount_Catalog_Product_View_Tierprice</catalog_product_view_tierprice>
                </rewrite>
            </anylamp_discount>
        </blocks>
        <models>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Model</class>
            </jeroenvermeulen_blockcache>
        </models>
        <helpers>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Helper</class>
            </jeroenvermeulen_blockcache>
        </helpers>
        <events>
            <application_clean_cache>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </application_clean_cache>
            <clean_media_cache_after>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </clean_media_cache_after>
            <clean_catalog_images_cache_after>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </clean_catalog_images_cache_after>
            <core_clean_cache>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </core_clean_cache>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <jeroenvermeulen_blockcache>
                    <file>jeroenvermeulen/blockcache.xml</file>
                </jeroenvermeulen_blockcache>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </core_block_abstract_to_html_before>
            <controller_front_send_response_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>controllerFrontSendResponseBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </controller_front_send_response_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <adminhtml_cache_flush_all>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </adminhtml_cache_flush_all>
            <adminhtml_cache_flush_system>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </adminhtml_cache_flush_system>
            <adminhtml_cache_refresh_type>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheCleanEvent</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </adminhtml_cache_refresh_type>
        </events>
    </adminhtml>
    <default>
        <jeroenvermeulen_blockcache>
            <general>
                <enable_formkey_fix>1</enable_formkey_fix>
                <enable_flush_log>0</enable_flush_log>
                <enable_flush_translation_change>1</enable_flush_translation_change>
            </general>
            <category_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
                <enable_flush_category_change>1</enable_flush_category_change>
            </category_page>
            <product_detail>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
                <enable_flush_product_change>1</enable_flush_product_change>
                <enable_flush_category_change>1</enable_flush_category_change>
            </product_detail>
            <cms_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_flush_cms_page_change>1</enable_flush_cms_page_change>
            </cms_page>
            <cms_block>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_flush_cms_block_change>1</enable_flush_cms_block_change>
            </cms_block>
        </jeroenvermeulen_blockcache>
    </default>
</config>