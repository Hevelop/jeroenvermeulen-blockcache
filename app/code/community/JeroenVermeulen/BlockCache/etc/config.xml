<!--suppress XmlUnboundNsPrefix -->
<config>
    <modules>
        <jeroenvermeulen_blockcache>
            <version>1.2.0</version>
        </jeroenvermeulen_blockcache>
    </modules>
    <global>
        <blocks>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Block</class>
            </jeroenvermeulen_blockcache>
        </blocks>
        <models>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Model</class>
            </jeroenvermeulen_blockcache>
        </models>
        <helpers>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Helper</class>
            </jeroenvermeulen_blockcache>
        </helpers>
        <events>
            <jv_clean_backend_cache>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cleanBackendCache</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </jv_clean_backend_cache>
            <jv_cache_miss_jv>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheMiss</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </jv_cache_miss_jv>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <jeroenvermeulen_blockcache>
                    <file>jeroenvermeulen/blockcache.xml</file>
                </jeroenvermeulen_blockcache>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </core_block_abstract_to_html_before>
            <controller_front_send_response_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>controllerFrontSendResponseBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </controller_front_send_response_before>
        </events>
    </frontend>
    <default>
        <jeroenvermeulen_blockcache>
            <general>
                <enable_formkey_fix>1</enable_formkey_fix>
                <log_miss>0</log_miss>
            </general>
            <category_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
            </category_page>
            <product_detail>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
            </product_detail>
            <cms_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
            </cms_page>
            <cms_block>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
            </cms_block>
            <flushes>
                <_log>1</_log>
                <catalog_category>1</catalog_category>
                <catalog_product>1</catalog_product>
                <cms_page>1</cms_page>
                <cms_block>1</cms_block>
                <translate>0</translate>
                <store>0</store>
                <website>0</website>
                <block_html>0</block_html>
                <mage>0</mage>
                <_without_tags>0</_without_tags>
            </flushes>
        </jeroenvermeulen_blockcache>
    </default>
</config>